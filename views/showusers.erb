<h2>База пользователей</h2>
<p>Персональные данные пользователей</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>username</th>
            <th>phone</th>
            <th>datestamp</th>
            <th>master</th>
            <th>color</th>
        </tr>
    </thead>
    <tbody>
        <% @results.each do |row| %>
            <tr>
                <th scope="row"><%= row['id'] %></th>
                <td><%= row['username'] %></td>
                <td><%= row['phone'] %></td>
                <td><%= row['datestamp'] %></td>
                <td><%= row['master'] %></td>
                <td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
            </tr>
        <% end %>
    </tbody>
</table>