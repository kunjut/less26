<h2>Записаться</h2>
<p>Здесь можно записаться в Барбершоп</p>

<form action="/visit" method="POST">
    <div class="form-group">
        <label>Ваше имя</label>
        <input type="text" name="username" class="form-control" placeholder="Введите ваше имя" value="<%=@username%>">
    </div>
    <div class="form-group">
        <label>Ваш телефон</label>
        <input type="text" name="phonenumber" class="form-control" placeholder="Введите номер вашего телефона" value="<%=@phonenumber%>">
    </div>
    <div class="form-group">
        <label>Когда вас ждать?</label>
        <input id="datetimepicker" type="text" name="datetime" class="form-control" placeholder="Введите дату и время" value="<%=@datetime%>">
    </div>
    <div class="form-group">
        <label>Кто ваш мастер?</label>
        <select name="master" class="form-control">
            <option selected disabled="disabled">Выберите мастера</option>
            <% @barbers.each do |i|%>
            <option <%= @master == i['name'] ? 'selected' : '' %>><%= i['name'] %></option>
            <% end%>
        </select>
    </div>
    <div>
        <label>В какой цвет хотите красить волосы: </label>
        <select id="colorpicker" name="colorpicker">
            <option value="#7bd148">Green</option>
            <option value="#5484ed">Bold blue</option>
            <option value="#a4bdfc">Blue</option>
            <option value="#46d6db">Turquoise</option>
            <option value="#7ae7bf">Light green</option>
            <option value="#51b749">Bold green</option>
            <option value="#fbd75b">Yellow</option>
            <option value="#ffb878">Orange</option>
            <option value="#ff887c">Red</option>
            <option value="#dc2127">Bold red</option>
            <option value="#dbadff">Purple</option>
            <option value="#e1e1e1">Gray</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Записаться</button>        
</form>

<script type='text/javascript'>
    $(function() {
        $('#colorpicker').simplecolorpicker();
        $('#datetimepicker').datetimepicker(); //подключение плагина
        jQuery.datetimepicker.setLocale('ru'); //настройка на рус.яз
    });
</script> 